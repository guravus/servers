{
  "name": "ChatGPT Fanout Inspector",
  "description": "Capture background and fan-out requests ChatGPT makes for a specific conversation.",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "ChatGPT Fanout Inspector",
    "default_popup": "popup.html"
  }
}
